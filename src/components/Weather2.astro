<style>
   * {
    margin: 0;
    padding: 0;
    font-family: 'Poppins', sans-serif;
    box-sizing: border-box;
    color: white;
   }
   .card {
    width: 90%;
    max-width: 500px;
    max-height: 250px;
    /* background: linear-gradient(135deg, rgba(147, 160, 217, 0.5), rgba(117, 140, 208, 0.5)); */
    background: linear-gradient(135deg, #93A0D9, #758CD0);
    box-shadow: 0 0 6px #888888;
    margin: 100px auto 0;
    border-radius: 5px;

    display: flex;
    align-items: center;
    justify-content: center;
   }
   .weather {
    padding-right: 15px;
    z-index: 1;
   }
   .description {
    padding-top: 45px;

    position: absolute;
    z-index: 2;
   }
   .weather-icon {
    padding-top: 40px;
   }
   .seperator {
    width: 1px;
    height: 200px;
    margin: auto 0;
    background-color: white;
   }
   .weather-info {
    padding-left: 30px;
   }

   .location {
    font-size: 18px;
    font-weight: 600;
   }
   .date {
    padding-bottom: 35px;
   }
   .degree-cel {
    font-size: 35px;
    font-weight: 600;
   }
   .degree-fahre {
    font-size: 22px;
    font-weight: 600;
   }
</style>

<script type="module" src="public/scrits/weather.js"></script>
