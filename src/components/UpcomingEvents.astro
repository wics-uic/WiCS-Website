---
import EventCard from "./EventCard.astro";
import "../styles/global.css";

const BASE_URL = "http://localhost:4321";

let events = [];

try {
  const res = await fetch(`${BASE_URL}/api/calendar`);
  if (!res.ok) throw new Error("Failed to fetch events");
  const data = await res.json();
  events = data.items || [];
} catch (error) {
  console.error("Error fetching events:", error);
}

---

<section class="upcoming-events">
  <div class="wave-background">
    <img
      src="/cloud1.png"
      alt="Test cloud 1"
      style="width: 500px; height: auto;"
      class="cloud cloud-1"
    />
    <img
      src="/cloud2.png"
      alt="Test cloud 1"
      style="width: 500px; height: auto;"
      class="cloud cloud-2"
    />
  </div>

  <div class="content">
    <h2><b>Upcoming Events</b></h2>
    <div class="events-container">
      {
        events.map((event : any, index : any) => (
          <div class="event-card">
            <div class="event-image-container">
              <img
                src="/event-image.svg"
                alt="Event Banner"
                class="event-image"
              />
            </div>
            <div class="event-details">
              <EventCard
                title={event.summary}
                starttime={event.start.dateTime}
                endtime={event.end.dateTime}
                description={event.description}
              />
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .upcoming-events {
    position: relative;
    width: 100%;
    padding: 6rem 1rem;
    overflow: hidden;
    min-height: 100vh;
  }

  .wave-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #ffebee;
    z-index: -2;
  }

  .wave {
    position: absolute;
    width: 100%;
  }

  .wave-top {
    top: 0;
    z-index: -1;
  }

  .wave-bottom {
    bottom: 0;
    z-index: -1;
  }

  .cloud {
    position: absolute;
    opacity: 0.8;
    z-index: 0; /* Increased z-index to make clouds visible */
    filter: brightness(1.05);
  }

  .cloud-1 {
    top: 15%;
    right: 10%;
    width: 180px;
    animation: float 6s ease-in-out infinite;
  }

  .cloud-2 {
    top: 45%;
    left: 5%;
    width: 220px;
    animation: float 6s ease-in-out infinite;
  }

  @keyframes float {
    0% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-15px);
    }
    100% {
      transform: translateY(0px);
    }
  }

  .content {
    position: relative;
    max-width: 800px;
    margin: 0 auto;
    z-index: 1;
  }

  h2 {
    color: #944029;
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 2rem;
    font-family: "Lora";
  }

  .events-container {
    display: flex;
    flex-direction: column;
    background-color: #fdcbcd;
    border-radius: 25px;
    display: grid;
    grid-template-columns: 1fr;
    max-width: 900px;
    margin: auto;
    padding: 2rem;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.08);
  }

  .event-card {
    display: flex;
    justify-content: center;
    align-items: center;
    background: transparent;
    border-radius: 15px;
    padding: 20px;
    max-width: auto;
    gap: 10px;
    margin-bottom: 1.5rem;
    transition:
      background-color 0.3s ease,
      transform 0.3s ease,
      box-shadow 0.3s ease;
    font-family: "Raleway";
  }

  .event-card:hover {
    background-color: #c6e8e8;
    transform: translateY(-2px);
  }

  .event-image-container {
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #fff7ed;
    border-radius: 15px;
    padding: 0px;
    max-width: 800px;
    width: 190px;
    height: 190px;
    box-shadow: 0 4px 1px rgba(0, 0, 0, 1);
  }

  .event-image {
    width: 180px;
    height: 180px;
    border-radius: 10px;
    object-fit: cover;
  }

  .event-details {
    background: #fff7ed;
    box-shadow: 0 4px 1px rgba(0, 0, 0, 1);
    border-radius: 15px;
    padding: 30px 10px;
    width: auto;
    height: auto;
    flex: 1;
    text-align: left;
    color: #944029;
  }

  .event-details p {
    margin: 5px 0;
    font-size: 0.9rem;
  }

  .event-description li {
    margin-top: 8px;
    font-size: 0.9rem;
    line-height: 1.4;
  }

  .event-card h3 {
    margin-top: 0;
    margin-bottom: 0.75rem;
    font-family: "Raleway";
  }

  .event-card li {
    position: relative;
    padding-left: 1rem;
    margin-bottom: 0.5rem;
  }

  .event-card li:before {
    content: "â€¢";
    position: absolute;
    left: 0;
  }
  .event-card:last-child {
    margin-bottom: 0;
  }
</style>
